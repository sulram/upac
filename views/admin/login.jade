extends layout

block title
	| Login Administração UPAC

block content
	.login-form
		h2 Login
		form(action='/admin/login', method='POST')
			fieldset
				.clearfix
					input(type="text", name="username", placeholder="Nome de usuário ou email")
				.clearfix
					input(type="password", name="password", placeholder="Senha")
				button.btn.btn-primary(type="submit") Entrar