doctype 5
html
	head
		title= title
		link(rel='stylesheet', href='/flat-ui/bootstrap/css/bootstrap.css')
		link(rel='stylesheet', href='/flat-ui/bootstrap/css/bootstrap-responsive.css')
		link(rel='stylesheet', href='/flat-ui/css/flat-ui.css')
		link(rel='stylesheet', href='/js/libs/codemirror/lib/codemirror.css')
		link(rel='stylesheet', href='/stylesheets/app.css')

	body.editor
		.container-fluid
			.row-fluid
				.editor_header.span2
					h1
						| Editor
					.editor_info
						p
							input(type="text", name="title", placeholder="t√≠tulo")#title
						p
							textarea(name="excerpt", rows="5", placeholder="resumo (140 caracteres)")#excerpt
					.editor_tags
						p
							textarea(name="tags", rows="5", placeholder="palavras-chave")#tags
					.editor_publish
						p
							select(name="status")#status
								option(name="published") publicar
								option(name="draft") rascunho
						p
							input(type="date", name="publicationDate")#publicationDate
						p
							input(type="submit", name="submit")#submit

				.editor_panes.span8.row-fluid
					.editor_markdown.span6
						h5 Markdown
						textarea(name="editor")#editor
					.editor_preview.span6
						h5 Preview
						#preview

				.editor_media.span2
					h5 Media

		script(src='/flat-ui/js/jquery-1.8.3.min.js')
		script(src='/js/libs/codemirror/lib/codemirror.js')
		script(src='/js/libs/codemirror/mode/markdown/markdown.js')
		script(src='/js/libs/codemirror/mode/gfm/gfm.js')
		script(src='/js/libs/codemirror/addon/mode/overlay.js')
		script(src='/js/libs/showdown/src/showdown.js')
		script(src='/js/libs/showdown/src/extensions/table.js')
		script(src='/js/libs/showdown/src/extensions/ufm.js')
		script(src='/js/editor.js')
