{{partial "blogposts"}}

{{#if needPagination}}
	<div class="pagination">
		<ul>
			<li class="previous">
				{{linkTo blog.recentes prevPage class="fui-arrow-left"}}
			</li>
			{{#each page in pages}}
				{{#if page.is_current}}
					<li class="active">{{#linkTo blog.recentes page}}{{page.page_num}}{{/linkTo}}</li>
				{{else}}
					<li>{{#linkTo blog.recentes page}}{{page.page_num}}{{/linkTo}}</li>
				{{/if}}
			{{/each}}
			<li class="next">
				{{linkTo blog.recentes nextPage class="fui-arrow-right"}}
			</li>
		</ul>
	</div>
{{/if}}