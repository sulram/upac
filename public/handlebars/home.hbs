	<div class="destaque">
		<ul>
		{{#each banner in banners}}
			<li>
				<a {{bindAttr href="banner.url" title="banner.text"}}>
					<img {{bindAttr src="banner.img"}}/>
				</a>
			</li>
		{{/each}}
		</ul>
