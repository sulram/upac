		<h2>
			{{place.title}}
		</h2>

		<p>{{place.excerpt}}</p>
		
		{{#if place.tags.length}}
			<p class="tags">
				{{#each place.tags}}
					<a {{action openTag this}}>{{this.name}}</a>
				{{/each}}
			</p>
		{{/if}}
		
		<p>
			{{#if isTheLoggedUser}}
				<a {{bindAttr href="place.editorUrl"}} class="btn btn-w-icon"/><span class="fui-new"></span> Editar</a>
			{{/if}}
			<a class="btn btn-w-icon" {{action zoom}}><span class="fui-location"></span> Localizar</a>
		</p>
		
	{{else}}
		<p class="def_loading">carregando perfil</p>
	{{/if}}
</div>